@model MoviesApp.ViewModels.ActorsViewModel

@{
    ViewData["Name"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actors</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Surname"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            <label asp-for="DateOfBirth"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToString("dd.MM.yyyy")
        </dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
